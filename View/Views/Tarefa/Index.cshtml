
@{
    ViewBag.Title = "Index";
}

<h3 class=" mt-3">Lista de Tarefas</h3>

<button class="btn btn-primary mt-md-3 mb-3" data-toggle="modal" data-target="#modalCadastroTarefa"><i class="fas fa-plus"></i> Nova Tarefa</button>
<div class="row">
    <div class="col-3 offset-9 mb-3">
        <input type="text" id="campo-pesquisa" placeholder="Busca" class="form-control" value="" />
    </div>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Código</th>
            <th>Usuario</th>
            <th>Projeto</th>
            <th>Categoria</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Duração</th>
            <th>Ação</th>
        </tr>
    </thead>

    <tbody id="lista-tarefas"></tbody>

    <tfoot>
        <tr>
            <th>Código</th>
            <th>Usuario</th>
            <th>Projeto</th>
            <th>Categoria</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Duração</th>
            <th>Ação</th>
        </tr>
    </tfoot>
</table>

<!-- Modal -->
<div class="modal fade" id="modalCadastroTarefa" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"
                    id="exampleModalLabel">
                    Cadastro de Tarefa
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form" method="post" action="javascript:void(0)">

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="campo-usuario">Usuario</label>
                                <select id="campo-usuario" class="form-control">
                                    @foreach (Model.Usuario usuario in ViewBag.Usuarios)
                                    {
                                        <option value="@usuario.Id">@usuario.Nome</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group">
                                <label for="campo-projeto">Projeto</label>
                                <select id="campo-projeto" class="form-control">
                                    @foreach (Model.Projeto projeto in ViewBag.Projetos)
                                    {
                                        <option value="@projeto.Id">@projeto.Nome</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="campo-categoria">Categoria</label>
                                <select id="campo-categoria" class="form-control">
                                    @foreach (Model.Categoria categoria in ViewBag.Categorias)
                                    {
                                        <option value="@categoria.Id">@categoria.Nome</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group">
                                <label for="campo-titulo">Título</label>
                                <input type="text" id="campo-titulo" name="titulo" class="form-control" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-6">
                            <div class="form-group">
                                <label for="campo-descricao">Descricao</label>
                                <input type="text" id="campo-descricao" class="form-control"/>
                            </div>
                        </div>

                        <div class="col-6">
                            <div class="form-group">
                                <label for="campo-duracao">Duração</label>
                                <input type="date" id="campo-duracao" class="form-control" value="2000-01-01"/>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success"
                                id="tarefa-botao-salvar">
                            <i class="fas fa-save"></i> Salvar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/tarefa/cadastro.js"></script>

