
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<h3 class="mt-3 text-center"> Lista de Categorias </h3>

<div class="row">
    <div class="col-12 mb-3">
        <a class="btn btn-primary float-lg-right" href="@Url.Action("Cadastro")">
            <i class="fas fa-plus"></i> Nova Categoria
        </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-bordered">

            <thead class="thead-dark">
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                </tr>


            </thead>
            <tbody>
                @foreach (Model.Categoria categoria in ViewBag.Categorias)
                {
                    <tr>
                        <th>@categoria.Id</th>
                        <th>@categoria.Nome</th>
                        <td>
                            <a href="@Url.Action("Editar" , new { Id = categoria.Id })" class="btn btn-primary">
                                <i class="fas fa-pen"></i> Editar
                            </a>

                            <a href="@Url.Action("Apagar" , new { Id = categoria.Id })" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Apagar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>
